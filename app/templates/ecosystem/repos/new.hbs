{{page-title "New Repository"}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><LinkTo @route="index">Ecosystems</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page"><LinkTo @route="ecosystem" @model={{this.model}}>{{this.model.name}}</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page">New Repository</li>
  </ol>
</nav>

<h1>New Repository</h1>

<section>
  <BsForm @onSubmit={{action "createRepo"}} @model={{this.repo}} as |form|>
    <form.element @controlType="input" @label="Name" @property="name" />
    <LinkTo @route="ecosystem.ecosystem.profiles" @model={{this.model}} class="btn btn-secondary">Cancel</LinkTo>
    <form.submitButton>Create</form.submitButton>
  </BsForm>
</section>