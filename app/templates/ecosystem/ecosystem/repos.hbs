{{page-title "Ecoystem"}}

<section>
  <h3>Repositories</h3>

  <p>
    Each <em>repository</em> corresponds to exactly one Conan package recipe. 
    The repository data contains the location of the repository and the path
    to the Conan recipe in this repository.
  </p>

  <LinkTo @route="ecosystem.repos.new" class="btn btn-primary">New Repo</LinkTo>
</section>

<section>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Location</th>
        <th scope="col" colspan="3">Path</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.model.repos as |repo|}}
        <tr>
          <td>{{repo.name}}</td>
          <td>{{repo.url}}</td>
          <td>{{repo.path}}</td>
          <td><LinkTo @route="ecosystem.repos.repo" @models={{array repo.ecosystem repo}} class="btn btn-primary btn-sm">Open</LinkTo></td>
          <td><RemoveDialog @item={{repo}} class="btn-sm"/></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
