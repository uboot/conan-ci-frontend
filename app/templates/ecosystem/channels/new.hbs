{{page-title "New Channel"}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><LinkTo @route="index">Ecosystems</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page"><LinkTo @route="ecosystem" @model={{this.model}}>{{this.model.name}}</LinkTo></li>
    <li class="breadcrumb-item active" aria-current="page">New Channel</li>
  </ol>
</nav>

<h1>New Channel</h1>

<section>
  <BsForm @onSubmit={{action "createChannel"}} @model={{this.channel}} as |form|>
    <form.element @controlType="input" @label="Name" @property="name" />
    <LinkTo @route="ecosystem.ecosystem.channels" @model={{this.model}} class="btn btn-secondary">Cancel</LinkTo>
    <form.submitButton>Create</form.submitButton>
  </BsForm>
</section>